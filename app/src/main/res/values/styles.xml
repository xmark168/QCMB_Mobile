<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StorePillButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">20dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">0dp</item>

        <!-- ðŸ‘‡ kill the shadow completely -->
        <item name="android:elevation">0dp</item>        <!-- resting -->
        <item name="elevation">0dp</item>
        <item name="android:translationZ">0dp</item>     <!-- pressed -->
        <item name="android:stateListAnimator">@null</item> <!-- disable lift-on-press -->
    </style>

    <style name="StorePillButton.Blue" parent="StorePillButton">
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="StorePillButton.Grey" parent="StorePillButton">
        <item name="backgroundTint">@color/text_secondary</item>  <!-- e.g. #BDBDBD -->
        <item name="android:textColor">@color/text_white</item>
    </style>
</resources>