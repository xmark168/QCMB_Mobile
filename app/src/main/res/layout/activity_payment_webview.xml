    <!-- WebView Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_webview_container"
        android:layout_marginTop="4dp">

        <WebView
