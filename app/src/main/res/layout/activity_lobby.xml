                                </LinearLayout>

                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/btnIncreaseMatchTime"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    app:cardCornerRadius="20dp"
                                    app:cardElevation="2dp"
                                    app:cardBackgroundColor="@color/secondary_green"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:foreground="?attr/selectableItemBackground">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:text="+"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/text_white"
                                        android:gravity="center" />

                                </com.google.android.material.card.MaterialCardView>

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Constraint Info -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ℹ️ Items ≤ Max Items và &lt; Số bài khởi tạo"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:background="@color/info_background"
                            android:padding="8dp"
                            android:layout_marginBottom="8dp"
                            android:gravity="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Create Room Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCreateRoom"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="🎮 Tạo Phòng"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/primary_blue"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_add_room"
                    app:iconTint="@color/text_white" />

            </LinearLayout>

            <!-- Join Room Section -->
            <LinearLayout
                android:id="@+id/sectionJoinRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tham Gia Phòng"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="16dp" />

                <!-- Join by Code Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="🔢 Nhập mã phòng"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Ví dụ: ABC123"
                            app:boxStrokeColor="@color/secondary_green"
                            app:hintTextColor="@color/secondary_green">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etRoomCode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textCapCharacters"
                                android:maxLength="6" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnJoinByCode"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Tham Gia"
                            android:textStyle="bold"
                            app:backgroundTint="@color/secondary_green"
                            app:cornerRadius="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Available Rooms -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phòng có sẵn"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvAvailableRooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

                <!-- Empty State -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardEmptyRooms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_quiz_logo"
                            app:tint="@color/text_secondary"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="No rooms" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Không có phòng nào"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hãy tạo phòng mới hoặc đợi người khác tạo!"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:gravity="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>