<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/text_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Topic Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTopicName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🧠 Tổng hợp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/tvTopicDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Câu hỏi tổng hợp từ nhiều lĩnh vực"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvTopicStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="✅ Hoạt động"
                    android:textSize="10sp"
                    android:textColor="@color/secondary_green"
                    android:background="@drawable/bg_token_balance"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnEditTopic"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_edit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/primary_blue"
                android:contentDescription="Chỉnh sửa"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/btnDeleteTopic"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_close"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/secondary_red"
                android:contentDescription="Xóa" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 