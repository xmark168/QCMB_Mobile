            android:textColor="@color/text_white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/primary_blue"
            app:cornerRadius="28dp"
            android:layout_marginBottom="16dp"/>

        <!-- Back to Login Button -->
        <TextView
            android:id="@+id/btnBackToLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="â† Quay láº¡i Ä‘Äƒng nháº­p"
            android:textColor="@color/primary_blue"
            android:textSize="14sp"
            android:padding="8dp"
            android:layout_marginBottom="16dp"
            android:background="?android:attr/selectableItemBackground" />

        <!-- OTP Timer Info -->
        <LinearLayout
            android:id="@+id/layoutOtpInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/rounded_background_light"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â±ï¸ MÃ£ OTP Ä‘Ã£ Ä‘Æ°á»£c gá»­i Ä‘áº¿n email cá»§a báº¡n"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="start" />

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_blue"
                android:background="@drawable/rounded_background_blue_light"
                android:padding="8dp"
                android:minWidth="60dp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Resend Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”„ Gá»­i láº¡i mÃ£"
            android:textColor="@color/primary_blue"
            android:textSize="14sp"
            android:visibility="gone"
            app:backgroundTint="@android:color/transparent"
            app:strokeColor="@color/primary_blue"
            app:strokeWidth="1dp"
            app:cornerRadius="20dp"
            android:layout_marginBottom="24dp" />

        <!-- Verification Code Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:boxStrokeColor="@color/primary_blue"
            app:startIconDrawable="@drawable/ic_flash"
            app:startIconTint="@color/primary_blue"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="MÃ£ xÃ¡c nháº­n"
                android:inputType="number"
                android:textSize="16sp"
                android:padding="16dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Verify Code Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerifyCode"
