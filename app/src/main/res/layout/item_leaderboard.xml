<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Rank Container -->
        <FrameLayout
            android:id="@+id/rankContainer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:background="#2196F3">

            <TextView
                android:id="@+id/tvRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="4"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/ivRankMedal"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>

        <!-- User Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyễn Văn A"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvGamesPlayed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25 trận"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/tvWinRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85.5%"
                    android:textSize="12sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold" />

            </LinearLayout> -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/fItem"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="#1976D2">

                        <TextView
                            android:id="@+id/tvEmojiIcon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="⚡"
                            android:textSize="18sp"
                            android:textColor="@color/text_white" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Quantity Badge -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardQuantityBadge"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="-2dp"
                        android:layout_marginEnd="-2dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp"
                        app:cardBackgroundColor="#FF4444"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvQuantity"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="x2"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_white"
                            android:gravity="center" />

                    </com.google.android.material.card.MaterialCardView>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fItem1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="#1976D2">

                        <TextView
                            android:id="@+id/tvEmojiIcon1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="⚡"
                            android:textSize="18sp"
                            android:textColor="@color/text_white" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Quantity Badge -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardQuantityBadge1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="-2dp"
                        android:layout_marginEnd="-2dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp"
                        app:cardBackgroundColor="#FF4444"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvQuantity1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="x2"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_white"
                            android:gravity="center" />

                    </com.google.android.material.card.MaterialCardView>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/fItem2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="#1976D2">

                        <TextView
                            android:id="@+id/tvEmojiIcon2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="⚡"
                            android:textSize="18sp"
                            android:textColor="@color/text_white" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Quantity Badge -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardQuantityBadge2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top|end"
                        android:layout_marginTop="-2dp"
                        android:layout_marginEnd="-2dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="3dp"
                        app:cardBackgroundColor="#FF4444"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvQuantity2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="x2"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_white"
                            android:gravity="center" />

                    </com.google.android.material.card.MaterialCardView>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Score -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,850 điểm"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2196F3" />

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Tổng điểm"-->
<!--                android:textSize="10sp"-->
<!--                android:textColor="#757575"-->
<!--                android:layout_marginTop="2dp" />-->

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>